"use client";

import { SessionProvider, useSession } from "next-auth/react";
import { ChatBox } from "./chat-box";
import { ChatContextWrapper } from "./chat-context-wrapper";
import { ChatInput } from "./chat-input";
import { SignOutBtn } from "./signout-btn";

export function ChatWrapper({ session }: any) {
  return (
    <SessionProvider session={session}>
      <SignOutBtn />
      <div className="flex h-screen w-screen justify-center content-center flex-wrap">
        <ChatContextWrapper>
          <div className="flex gap-2 flex-col rounded">
            <ChatBox />
            <ChatInput />
          </div>
        </ChatContextWrapper>
      </div>
    </SessionProvider>
  );
}
